@model List<tvseriesproject1.Models.movie>
@{
    ViewBag.Title = "showmovies";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        table, th, td {
            border: 2px solid black;
        }
        form {
            width: 30%;
        }

        button {
            background-color: #3C3232;
            color: white;
            padding: 12px 18px;
            margin: 5px 0;
            border: none;
            cursor: pointer;
            width: 60%;
        }
    </style>
</head>
<body style="background-color: #F5DEB3;">
    <div align=center>
        <h2>showing Movies</h2>
        @if (Model.Count <= 0)
        {
            <h2 style="color:black">No Movies are available for you.</h2>
        }
        else
        {
            <h2 class="form-title" style="color:black">Movies</h2>
            <table>
                <thead>
                    <tr>
                        <th class="column1" align="center">Id</th>
                        <th class="column1" align="center">Name</th>
                        <th class="column2" align="center">Genre</th>
                        <th class="column3" align="center">Director</th>
                        <th class="column4" align="center">Producer</th>
                        <th class="column8" align="center">Available on</th>
                        <th class="column8" align="center">Click for update</th>
                    </tr>
                </thead>
                @foreach (var mov in Model)
                {
                    <tbody>
                        <tr>
                            <td class="column1" align="center">@mov.Id</td>
                            <td class="column1" align="center">@mov.namee</td>
                            <td class="column2" align="center">@mov.genree</td>
                            <td class="column3" align="center">@mov.directorr</td>
                            <td class="column4" align="center">@mov.producerr</td>
                            <td class="column4" align="center">@mov.available_onn</td>
                            <td class="column1" align="center">
                                <form action="updatemovies" method="post">
                                    <input type="hidden" name="Id" value="@mov.Id" />
                                    <input type="submit" value="Update" />
                                </form>
                        </tr>
                    </tbody>
                }
            </table>
        }
        <br />
        <br />
        <fieldset>
            <form method="post" action="addmovies">
                <button type="submit">Add Movies</button><br><br>
            </form>
            <br />
            <form method="post" action="Index">
                <button type="submit">Return to Home</button><br />
            </form>
        </fieldset>
    </div>
</body>
</html>